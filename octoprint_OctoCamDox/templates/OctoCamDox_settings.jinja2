<form class="form-horizontal">
    <h3>{{ _('Folders') }}</h3>

    <div class="control-group">
        <label class="control-label" for="settings-folderUploads">{{ _('Picture Target Folder') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.OctoCamDox.target_folder" id="settings-target-folder">
        </div>
    </div>

    <h3>{{ _('Program constants') }}</h3>
    <div class="control-group">
        <label class="control-label" for="settings-width">{{ _('Picture width: ') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.OctoCamDox.picture_width" id="settings-picture-width">
        </div>
        <label class="control-label" for="settings-height">{{ _('Picture height: ') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.OctoCamDox.picture_height" id="settings-picture-height">
        </div>
        <div class="layer-buttons btn-group-toolbar row-fluid">
            <button type="button" class="btn btn-primary btn-medium span3" data-bind = "click: getImageRes">
                <span>{{ _('Get picture resolution') }}</span>
            </button>
            <div class="row-fluid">
                <div class="span9">Take the picture resolution from the printer camera, make sure all is online!</div>
            </div>
        </div>
        <label class="control-label" for="settings-layer-height">{{ _('Layer height: ') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.OctoCamDox.layer_height" id="settings-layer-height">
        </div>
        <label class="control-label" for="settings-target-extruder">{{ _('Target extruder: ') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.OctoCamDox.target_extruder" id="settings-target-extruder">
        </div>
    </div>

    <h3>{{ _('Camera Documentation Toggle') }}</h3>
    <div class="control-group">
        <label class="control-label" for="grid-options-switch-grid-gen">{{ _('Activate Camera Documentation: ') }}</label>
        <div class="controls">
            <input type="checkbox" name="toggleCamDox" class="input-block-level" data-bind="checked: settings.plugins.OctoCamDox.activateCamGrab" id="option-toggle-cam-grab">
        </div>
    </div>

    <h3>{{ _('Camera Grid Options') }}</h3>
    <div class="control-group">
        <label class="control-label" for="grid-options-normal">{{ _('Use normal mode: ') }}</label>
        <div class="controls">
            <input type="radio" name="optionsforce" class="input-block-level" data-bind="checked: settings.plugins.OctoCamDox.normalMode" onClick="resetOtherButtons" id="option-normal">
        </div>
        <label class="control-label" for="grid-options-forceLTR">{{ _('Force left to right: ') }}</label>
        <div class="controls">
            <input type="radio" name="optionsforce" class="input-block-level" data-bind="checked: settings.plugins.OctoCamDox.forceLTR" onClick="resetOtherButtons" id="option-force-LTR">
        </div>
        <label class="control-label" for="grid-options-forceRTL">{{ _('Force right to left: ') }}</label>
        <div class="controls">
            <input type="radio" name="optionsforce" class="input-block-level" data-bind="checked: settings.plugins.OctoCamDox.forceRTL" onClick="resetOtherButtons" id="option-force-RTL">
        </div>
        <label class="control-label" for="grid-options-add-flaps">{{ _('Add backlash flaps: ') }}</label>
        <div class="controls">
            <input type="checkbox" name="addFlaps" class="input-block-level" data-bind="checked: settings.plugins.OctoCamDox.addSlipFlaps" id="option-add-flaps">
        </div>
    </div>
</form>
